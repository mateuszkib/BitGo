<!DOCTYPE html>
<html>
<% include ../header %>

<body>
    <% include ../nav %>


    <div class="container wallet-info">
        <div class="col-md-12">
            <div class="row mt-5">
                <div class="col-md-6">
                    <h2><%= wallet._wallet.label %></h2>
                </div>
                <div class="col-md-6 text-right">
                    <h2>Balance : <%= (wallet._wallet.balance / 1e8).toFixed(4) %> <%= coin.toUpperCase() %></h2>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-2 ml-auto">
                <i class="fas fa-share-square"></i><a
                    href="/exchange/user/profile/<%= userId %>/<%= coin%>/<%= idWallet %>/send">Send</a>
            </div>
            <div class="col-md-2">
                <i class="fas fa-retweet"></i><a
                    href="/exchange/user/profile/<%= userId %>/<%= coin%>/<%= idWallet %>/receive">Receive</a>
            </div>
        </div>
    </div>


    <% include ../footer %>

    <% include ../scripts %>

</body>

</html>