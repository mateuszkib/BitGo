<!DOCTYPE html>
<html>
<% include ../header %>

<body>
    <% include ../nav %>


    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 mt-5">
                <h1>Send</h1>
            </div>
            <div class="col-md-8 offset-md-2 mt-5">
                <form action="/user/send/<%= id%>" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="address" placeholder="Enter <%= coin%> recipient address">
                    </div>
                    <div class="row">
                        <div class="col-md-1 coinFlex">
                            <p><%= coin %></p>
                        </div>
                        <div class="form-group col-md-11">
                            <input type="number" step="any" class="form-control" name="amount" placeholder="Enter amount">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Enter password wallet">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>


    <% include ../footer %>

    <% include ../scripts %>

</body>

</html>